{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "esnext",
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": "./",
    "moduleResolution": "Node",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "removeComments": true,
    "pretty": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "downlevelIteration": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
